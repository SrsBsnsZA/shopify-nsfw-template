<!-- social_footer.liquid -->


<ul class="footer__list-social list-unstyled list-social d-flex" role="list">
  
  {%- if settings.social_facebook_link != blank -%}
    <li class="list-social__item">
      <a href="{{ settings.social_facebook_link }}" class="link--text list-social__link link_Fa" aria-describedby="a11y-external-message" title="facebook" target="_blank">
        {%- render 'icon-facebook' -%}
        <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
      </a>
    </li>
  {%- endif -%}
