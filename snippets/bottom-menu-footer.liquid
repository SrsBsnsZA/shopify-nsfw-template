<nav class="bottom-footer-menu">
    <ul role="list">
        {%- for link in menu.links -%}
            <li>
                {%- if link != blank -%}
                    <a href="{{ link.url }}" class="footer-link"{%- if link.current -%} aria-current="page"{%- endif -%}>
                        <span {%- if link.current -%} class="footer-active-menu"{%- endif -%}>{{ link.title | escape }}</span>
                    </a>
                {%- endif -%}
            </li>
        {%- endfor -%}
    </ul>
</nav>