{{ 'rude-collection.css' | asset_url | stylesheet_tag }}

<div class="rude-collection page-width">
  {% capture url %}/collections/{{ collection.handle }}{% endcapture %}

    <ul class="rude-rail">
        {%- for block in section.blocks -%}
            <li class="rude-rail-item {% if url == block.settings.collection.url%}active{% endif %}" {{ block.shopify_attributes }}>
                <a href="{{ block.settings.collection.url }}" class="rude-link">
                    <div class="main-img">
                        <img
                                srcset="{%- if block.settings.advert_image.width >= 165 -%}{{ block.settings.advert_image | img_url: '165x' }} 165w,{%- endif -%}
                        {%- if block.settings.advert_image.width >= 330 -%}{{ block.settings.advert_image | img_url: '330x' }} 330w,{%- endif -%}
                        {%- if block.settings.advert_image.width >= 535 -%}{{ block.settings.advert_image | img_url: '535x' }} 535w,{%- endif -%}
                        {%- if block.settings.advert_image.width >= 750 -%}{{ block.settings.advert_image | img_url: '750x' }} 750w,{%- endif -%}
                        {%- if block.settings.advert_image.width >= 1000 -%}{{ block.settings.advert_image | img_url: '1000x' }} 1000w,{%- endif -%}
                        {%- if block.settings.advert_image.width >= 1500 -%}{{ block.settings.advert_image | img_url: '1500x' }} 1500w,{%- endif -%}
                        {%- if block.settings.advert_image.width >= 3000 -%}{{ block.settings.advert_image | img_url: '3000x' }} 3000w{%- endif -%}"
                                src="{{ block.settings.advert_image | img_url: '1500x' }}"
                                sizes="
                      (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: columns }}px,
                      (min-width: 750px) {% if section.blocks.size > 1 %}calc((100vw - 10rem) / 2){% else %}calc(100vw - 10rem){% endif %},
                      calc(100vw - 3rem)"
                                alt="{{ block.settings.collection.title | escape }}"
                                loading="lazy"
                                class="motion-reduce"
                        >
                    </div>
                    <div class="hover-img">
                        <img
                                srcset="{%- if block.settings.hover_image.width >= 165 -%}{{ block.settings.hover_image | img_url: '165x' }} 165w,{%- endif -%}
                        {%- if block.settings.hover_image.width >= 330 -%}{{ block.settings.hover_image | img_url: '330x' }} 330w,{%- endif -%}
                        {%- if block.settings.hover_image.width >= 535 -%}{{ block.settings.hover_image | img_url: '535x' }} 535w,{%- endif -%}
                        {%- if block.settings.hover_image.width >= 750 -%}{{ block.settings.hover_image | img_url: '750x' }} 750w,{%- endif -%}
                        {%- if block.settings.hover_image.width >= 1000 -%}{{ block.settings.hover_image | img_url: '1000x' }} 1000w,{%- endif -%}
                        {%- if block.settings.hover_image.width >= 1500 -%}{{ block.settings.hover_image | img_url: '1500x' }} 1500w,{%- endif -%}
                        {%- if block.settings.hover_image.width >= 3000 -%}{{ block.settings.hover_image | img_url: '3000x' }} 3000w{%- endif -%}"
                                src="{{ block.settings.hover_image | img_url: '1500x' }}"
                                sizes="
                      (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: columns }}px,
                      (min-width: 750px) {% if section.blocks.size > 1 %}calc((100vw - 10rem) / 2){% else %}calc(100vw - 10rem){% endif %},
                      calc(100vw - 3rem)"
                                alt="{{ block.settings.collection.title | escape }}"
                                loading="lazy"
                                class="motion-reduce"
                        >
                    </div>
                </a>
                {% comment %}<a{% if block.settings.collection != blank and block.settings.collection.all_products_count > 0 %} href="{{ block.settings.collection.url }}"{% endif %}{% endcomment %}
                        {% comment %}class="card animate-arrow link{% if block.settings.collection.featured_image != blank %} card--media{% else %}{% if section.settings.image_ratio != 'adapt' %} card--stretch{% endif %}{% endif %}{% unless section.settings.image_padding %} card--light-border{% endunless %}"{% endcomment %}
                {% comment %}>{% endcomment %}
                    {% comment %}<div class="card--stretch card-colored color-{{ section.settings.color_scheme }}">{% endcomment %}
                        {% comment %}{%- if block.settings.collection.featured_image != blank -%}{% endcomment %}
                            {% comment %}<div{% if section.settings.image_padding %} class="card__media-spacer"{% endif %}>{% endcomment %}
                                {% comment %}{% if section.settings.image_padding %}{% endcomment %}
                                    {% comment %}<div class="overlay-card"></div>{% endif %}{% endcomment %}
                                {% comment %}<div class="media{% if section.blocks.size > 1 %} media--{{ section.settings.image_ratio }}{% endif %} media--hover-effect overflow-hidden"{% endcomment %}
                                     {% comment %}{% if section.settings.image_ratio == 'adapt' and section.blocks.size > 1 %}style="padding-bottom: {{ 1 | divided_by: block.settings.collection.featured_image.aspect_ratio | times: 100 }}%;"{% endif %}>{% endcomment %}
{% comment %}{% endcomment %}
                                    {% comment %}<img{% endcomment %}
                                            {% comment %}srcset="{%- if block.settings.collection.featured_image.width >= 165 -%}{{ block.settings.collection.featured_image | img_url: '165x' }} 165w,{%- endif -%}{% endcomment %}
                        {% comment %}{%- if block.settings.collection.featured_image.width >= 330 -%}{{ block.settings.collection.featured_image | img_url: '330x' }} 330w,{%- endif -%}{% endcomment %}
                        {% comment %}{%- if block.settings.collection.featured_image.width >= 535 -%}{{ block.settings.collection.featured_image | img_url: '535x' }} 535w,{%- endif -%}{% endcomment %}
                        {% comment %}{%- if block.settings.collection.featured_image.width >= 750 -%}{{ block.settings.collection.featured_image | img_url: '750x' }} 750w,{%- endif -%}{% endcomment %}
                        {% comment %}{%- if block.settings.collection.featured_image.width >= 1000 -%}{{ block.settings.collection.featured_image | img_url: '1000x' }} 1000w,{%- endif -%}{% endcomment %}
                        {% comment %}{%- if block.settings.collection.featured_image.width >= 1500 -%}{{ block.settings.collection.featured_image | img_url: '1500x' }} 1500w,{%- endif -%}{% endcomment %}
                        {% comment %}{%- if block.settings.collection.featured_image.width >= 3000 -%}{{ block.settings.collection.featured_image | img_url: '3000x' }} 3000w{%- endif -%}"{% endcomment %}
                                            {% comment %}src="{{ block.settings.collection.featured_image | img_url: '1500x' }}"{% endcomment %}
                                            {% comment %}sizes="{% endcomment %}
                      {% comment %}(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: columns }}px,{% endcomment %}
                      {% comment %}(min-width: 750px) {% if section.blocks.size > 1 %}calc((100vw - 10rem) / 2){% else %}calc(100vw - 10rem){% endif %},{% endcomment %}
                      {% comment %}calc(100vw - 3rem)"{% endcomment %}
                                            {% comment %}alt="{{ block.settings.collection.title | escape }}"{% endcomment %}
                                            {% comment %}height="{{ block.settings.collection.featured_image.height }}"{% endcomment %}
                                            {% comment %}width="{{ block.settings.collection.featured_image.width }}"{% endcomment %}
                                            {% comment %}loading="lazy"{% endcomment %}
                                            {% comment %}class="motion-reduce"{% endcomment %}
                                    {% comment %}>{% endcomment %}
                                {% comment %}</div>{% endcomment %}
                            {% comment %}</div>{% endcomment %}
{% comment %}{% endcomment %}
                            {% comment %}<div class="card__text card__text-spacing card-colored card__text-hover{% if section.settings.image_padding == false %} color-{{ section.settings.color_scheme }}{% endif %}">{% endcomment %}
                                {% comment %}{% unless section.settings.image_padding %}{% endcomment %}
                                    {% comment %}<div class="overlay-card"></div>{% endunless %}{% endcomment %}
                                {% comment %}<h3>{% endcomment %}
                                    {% comment %}{%- if block.settings.collection.title != blank -%}{% endcomment %}
                                        {% comment %}{{- block.settings.collection.title | escape -}}<span class="icon-wrap">{% endcomment %}
                                        {% comment %}&nbsp;{% render 'icon-arrow' %}</span>{% endcomment %}
                                    {% comment %}{%- else -%}{% endcomment %}
                                        {% comment %}{{ 'onboarding.collection_title' | t }}{% endcomment %}
                                    {% comment %}{%- endif -%}{% endcomment %}
                                {% comment %}</h3>{% endcomment %}
                            {% comment %}</div>{% endcomment %}
                        {% comment %}{%- else -%}{% endcomment %}
                            {% comment %}<div class="overlay-card"></div>{% endcomment %}
                            {% comment %}<div class="card__text-spacing card__text-hover">{% endcomment %}
                                {% comment %}<h3 class="h1">{% endcomment %}
                                    {% comment %}{%- if block.settings.collection.title != blank -%}{% endcomment %}
                                        {% comment %}{{- block.settings.collection.title | escape -}}{%- if block.settings.collection.description == blank -%}{% endcomment %}
                                        {% comment %}<span class="icon-wrap">&nbsp;{% render 'icon-arrow' %}</span>{% endif %}{% endcomment %}
                                    {% comment %}{%- else -%}{% endcomment %}
                                        {% comment %}{{ 'onboarding.collection_title' | t }}{% endcomment %}
                                    {% comment %}{%- endif -%}{% endcomment %}
                                {% comment %}</h3>{% endcomment %}
{% comment %}{% endcomment %}
                                {% comment %}{%- if block.settings.collection.description != blank -%}{% endcomment %}
                                    {% comment %}<p class="card__caption">{% endcomment %}
                                        {% comment %}{{- block.settings.collection.description | strip_html | truncatewords: 12 -}}{% endcomment %}
                                        {% comment %}<span class="icon-wrap">&nbsp;{% render 'icon-arrow' %}</span>{% endcomment %}
                                    {% comment %}</p>{% endcomment %}
                                {% comment %}{%- endif -%}{% endcomment %}
                            {% comment %}</div>{% endcomment %}
                        {% comment %}{%- endif -%}{% endcomment %}
                    {% comment %}</div>{% endcomment %}
                {% comment %}</a>{% endcomment %}
            </li>
        {%- endfor -%}
    </ul>
</div>

{% schema %}
{
  "name": "Rude Collections",
  "tag": "section",
  "class": "collection-list-section",
  "max_blocks": 15,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Collections",
      "label": "t:sections.collection-list.settings.title.label"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.collection-list.settings.image_ratio.options__1.label"
        },
        {
          "value": "portrait",
          "label": "t:sections.collection-list.settings.image_ratio.options__2.label"
        },
        {
          "value": "square",
          "label": "t:sections.collection-list.settings.image_ratio.options__3.label"
        }
      ],
      "default": "square",
      "label": "t:sections.collection-list.settings.image_ratio.label",
      "info": "t:sections.collection-list.settings.image_ratio.info"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.collection-list.settings.color_scheme.options__1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.collection-list.settings.color_scheme.options__2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.collection-list.settings.color_scheme.options__3.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.collection-list.settings.color_scheme.options__4.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.collection-list.settings.color_scheme.options__5.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.collection-list.settings.color_scheme.label"
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": false,
      "label": "t:sections.collection-list.settings.swipe_on_mobile.label"
    },
    {
      "type": "checkbox",
      "id": "image_padding",
      "default": false,
      "label": "t:sections.collection-list.settings.image_padding.label"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": false,
      "label": "t:sections.collection-list.settings.show_view_all.label"
    }
  ],
  "blocks": [
    {
      "type": "featured_collection",
      "name": "t:sections.collection-list.blocks.featured_collection.name",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "t:sections.collection-list.blocks.featured_collection.settings.collection.label"
        },
        {
          "type": "image_picker",
          "id": "advert_image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "hover_image",
          "label": "Hover Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Rude Collections",
      "blocks": [
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        }
      ]
    }
  ]
}
{% endschema %}
